{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler", // Standard for Next.js and modern Expo
    "allowImportingTsExtensions": true, // Helpful for monorepos
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    // DONT DO THIS so jsdoc will remain
    "removeComments": false,
  },
  "exclude": [
    "_"
  ],
  "include": [
    "packages/config/src/nativewind-env.d.ts"
  ]
}