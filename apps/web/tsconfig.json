{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "jsxImportSource": "nativewind",
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "react-native": [
        "react-native-web"
      ],
      "@my/api": [
        "../../packages/api/index.ts"
      ],
      "@my/api/*": [
        "../../packages/api/*"
      ],
      "@my/core": [
        "../../packages/core/src/index.ts"
      ],
      "@my/core/*": [
        "../../packages/core/src/*"
      ],
      "@my/features": [
        "../../packages/features/src/index.ts"
      ],
      "@my/features/*": [
        "../../packages/features/src/*"
      ],
      "@my/ui": [
        "../../packages/ui/src/index.tsx"
      ],
      "@my/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@my/config": [
        "../../packages/config/src/index.ts"
      ],
      "@my/config/*": [
        "../../packages/config/src/*"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "types.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    ".next/dev/dev/types/**/*.ts",
    "**/*.mts",
    "next.config.ts",
    "@my/config/src/nativewind-env.d.ts",
    "../../packages/config/src/nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
